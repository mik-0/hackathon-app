# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# TypeScript, JavaScript, JSON files - use tabs
[*.{ts,tsx,js,jsx,json,jsonc}]
indent_style = tab
indent_size = 4

# Markdown files - use spaces for better compatibility
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files - use spaces (required)
[*.{yml,yaml}]
indent_style = space
indent_size = 2



